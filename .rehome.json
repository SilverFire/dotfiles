{
    "shell": "zsh",
    "checks": {
        "which zsh": "apt-get install zsh",
        "which vim": "apt-get install vim",
        "which tmux": "apt-get install tmux"
    },
    "repos": {
        ".vim/bundle/Vundle.vim": "VundleVim/Vundle.vim",
        "src/quotes": "git@github.com:hiqsol/quotes",
        "prj/hiqdev/hidev": "git@github.com:hiqdev/hidev",
        "prj/hiqdev/rehome": "git@github.com:hiqdev/rehome",
        "prj/hiqdev/chkipper": "git@github.com:hiqdev/chkipper",
        "prj/hiqdev/rewatcher": "git@github.com:hiqdev/rewatcher"
    },
    "installs": {
        "bin/composer": [
            "wget https://getcomposer.org/installer -O composer-setup.php",
            "php composer-setup.php --install-dir=bin --filename=composer",
            "rm composer-setup.php"
        ]
    },
    "updates": {
        "bin/composer": [
            "bin/composer self-update"
        ],
        "prj/hiqdev/hidev/vendor": [
            "composer update -d prj/hiqdev/hidev"
        ],
        "prj/hiqdev/chkipper/vendor": [
            "composer update -d prj/hiqdev/chkipper"
        ]
    }
}
