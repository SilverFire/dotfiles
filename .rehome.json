{
    "shell": "zsh",
    "repos": {
        ".": "hiqsol/dotfiles",
        "prj/sol/shadow-home": "ssh://git.solex.me:222/git/sol/shadow-home",
        ".vim/bundle/Vundle.vim": "VundleVim/Vundle.vim",
        "prj/hiqsol/quotes": "hiqsol/quotes",
        "prj/hiqdev/rehome": "hiqdev/rehome"
    },
    "installs": {
        "shadow-home": [
            "chmod og-rwx ~/prj/sol",
            "chmod -R og-rwx ~/prj/sol/shadow-home",
            "cd prj/sol/shadow-home; ln -srf .ssh .calendar src ~",
            "cd prj/sol/shadow-home; ln -srf bin/* ~/bin"
        ],
        "checks": [
            "which zsh || echo apt-get install zsh",
            "which vim || echo apt-get install vim",
            "which tmux || echo apt-get install tmux"
        ],
        "vim-plugins": "vim +PluginInstall +qall",
        "bin/composer": [
            "wget https://getcomposer.org/installer -O composer-setup.php",
            "php composer-setup.php --install-dir=bin --filename=composer",
            "rm composer-setup.php",
            "bin/composer global install"
        ]
    },
    "updates": {
        "vim-plugins": "vim +PluginUpdate +qall",
        "bin/composer": [
            "bin/composer self-update",
            "bin/composer global update"
        ],
        "prj/hiqdev/hidev/vendor": [
            "cd prj/hiqdev/hidev; composer update"
        ]
    }
}
